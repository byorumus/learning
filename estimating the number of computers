import random
value=random.randint(0,100)
tahmin=int(input("değer tahmininiz: "))
while value != tahmin:  
    if value<tahmin:
        print("Lütfen Daha Küçük Bir Sayı Giriniz.")
        tahmin=int(input("değer tahmininiz: "))
    elif value>tahmin:
        print("Lütfen Daha Büyük Bir Sayı Giriniz.")
        tahmin=int(input("değer tahmininiz: "))   
print("TEBRİKLER! Doğru Tahmin Ettiniz.")
